rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /// Allow authenticated users to read their own user document
    match /user/{uid} {
      allow read: if request.auth.uid == uid;
      allow create: if request.auth.uid == uid && 
                       request.resource.data.keys().hasOnly(['email', 'username']);
      allow write: if false; // Only Cloud Functions (Admin SDK) can update
    }

    /// Allow authenticated users to read/write their own lists
    match /user/{uid}/list/{listId} {
      allow read: if request.auth.uid == uid;
      allow write: if false; // Only Cloud Functions can write
    }

    /// Movies and other public data - read-only from app
    match /movies/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    /// Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
